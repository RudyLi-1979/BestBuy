<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BestBuy"
        tools:targetApi="31">
        
        <!-- Chat Activity - AI Shopping Assistant (Main Entry Point) -->
        <activity
            android:name=".ui.ChatActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Barcode Scanner Activity -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:label="@string/scan_barcode"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.ChatActivity" />
        
        <!-- Product Detail Activity -->
        <activity
            android:name=".ui.ProductDetailActivity"
            android:exported="false"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:parentActivityName=".ui.ChatActivity" />
        
        <!-- Shopping Cart Activity -->
        <activity
            android:name=".ui.CartActivity"
            android:exported="false"
            android:parentActivityName=".ui.ChatActivity" />
    </application>

</manifest>
